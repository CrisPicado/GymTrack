@using Domain.Exercises;

@model List<ExerciseDTO>

@{
    ViewData["Title"] = "Exercises";
}

<div class="card">
    <div class="card-header">
        <h3 class="text-center my-2">List of Exercises</h3>
        <a asp-action="Create" asp-controller="Exercises" class="btn btn-success">Create</a>
    </div>

    <div class="card-body">

        <table id="exercises" class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Target Zone</th>
                    <th>Sets</th>
                    <th>Repeats</th>
                    <th>Weight</th>
                    <th>Equipment</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var exercise in Model)
                {
                    <tr>
                        <td>@exercise.Name</td>
                        <td>@exercise.TargetZone</td>
                        <td>@exercise.Sets</td>
                        <td>@exercise.Repeats</td>
                        <td>@exercise.Weight</td>
                        <td>@exercise.Equipment.Name</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a type="button" class="btn btn-info mx-2" asp-action="Update" asp-route-id="@exercise.Id">Edit</a>
                                <form method="post" asp-action="Delete" asp-route-id="@exercise.Id" onsubmit="return confirm('Are you sure you want to delete this exercise?');">
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>
