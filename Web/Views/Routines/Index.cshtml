@using Domain.Routines;
@model List<RoutineDTO>

@{
    ViewData["Title"] = "Routines";
}

<div class="card">
    <div class="card-header">
        <h3 class="text-center my-2">List of Routines</h3>
        <a asp-action="Create" asp-controller="Routines" class="btn btn-success">Create</a>
    </div>

    <div class="card-body">

        <table id="routines" class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Created By Coach</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var routine in Model)
                {
                    <tr>
                        <td>@routine.Name</td>
                        <td>@routine.Description </td>
                        <td>@routine.Coach.FullName</td>
                        <td>
                            <div class="btn-group" role="group" aria-label="Client Actions">
                                <a type="button" class="btn btn-info mx-2" asp-action="Update" asp-route-id="@routine.Id">Edit</a>
                                <form method="post" asp-action="Delete" asp-route-id="@routine.Id" onsubmit="return confirm('Are you sure you want to delete this client?');">
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                </form>
                            </div>
                        </td>

                    </tr>
                }
            </tbody>
        </table>

    </div>

</div>