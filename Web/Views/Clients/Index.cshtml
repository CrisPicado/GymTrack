@using Domain.Clients;
@model List<ClientDTO>

@{
    ViewData["Title"] = "Clients";
}

<div class="card">
    <div class="card-header">
        <h3 class="text-center my-2">List of Clients</h3>
        <a asp-action="Create" asp-controller="Clients" class="btn btn-success">Create</a>
    </div>

    <div class="card-body">

        <table id="clients" class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Full Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var client in Model)
                {
                    <tr>
                        <td>@client.FullName</td>
                        <td>
                            <div class="btn-group" role="group" aria-label="Client Actions">
                                <a type="button" class="btn btn-info mx-2" asp-action="Update" asp-route-id="@client.Id">Edit</a>
                                <form method="post" asp-action="Delete" asp-route-id="@client.Id" onsubmit="return confirm('Are you sure you want to delete this client?');">
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                </form>
                            </div>
                        </td>

                    </tr>
                }
            </tbody>
        </table>

    </div>

</div>